{% extends "base.twig" %}


{% block content %}
    <a id="article-anch" class="anch"></a>
    <div class="container-fluid content-wrapper article_content show-content">

        <article class="row post-type-{{post.post_type}} show_teaser" id="post-{{post.ID}}">
            <h1 class=" link-h1 col-12">Le petit mot de fabulle</h1>



            <div class="offset-md-2 d-none d-md-block"></div>
            <div class="col-md-2 col-12 img_alt">

                <img src="{{post.thumbnail.src}}" alt="affiche" class="affiche2 ">
            </div>
            <div class="offset-md-1 d-none d-md-block"></div>
            <div class=" article-content col-md-5">
                <div class="word-date">
                    {{ post.date|date('F Y') }}
                </div>
                {{ post.content }}

                <a href="#article-anch2" class="col-12">
                    <div class="button button2">
                        <p>
                            <i class="fas fa-chevron-down"></i>
                        </p>
                    </div>
                </a>
            </div>





            <div class="v-bloc row"></div>
            <a id="article-anch2" class="show-content2"></a>
            {% if post.get_field('video-booleen') %}
                <div class="offset-md-1 d-none d-md-block"></div>
                <div class="col-md-6 col-12">
                    <h1>
                        {{ post.get_field('field_5d55f554f07a2') }}
                    </h1>
                    {{ post.get_field('field_5d55f554f07b3')  }}

                </div>
                <div class="col-md-4 video">
                    <div class="video-content">
                        {{ post.get_field('field_5cb1e69bc71a5') }}
                    </div>
                    <a href="#article-anch3">
                        <div class="button button2">

                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                </div>
                <div class="offset-md-2 d-none d-md-block"></div>



            {% else %}

                <div class="row">
                    <div class="offset-md-1 d-none d-md-block"></div>
                    <div class="col-md-5 col-12">
                        <h2 class="article-h1">
                            {{ post.get_field('field_5d55f554f07a2') }}
                        </h2>


                            {{ post.get_field('field_5d55f554f07b3')  }}
                    </div>
                    <div class="offset-md-1 d-none d-md-block"></div>
                    <div class="col-md-4 col-12 img_alt" id="img-alt">
                        <img src="{{ post.get_field('field_5d55f554f0949') }}" class=" affiche2 " alt="img">
                        <a href="#article-anch3">
                            <div class="button button2">

                                <p><i class="fas fa-chevron-down"></i></p>
                            </div>
                        </a>
                    </div>
                    <div class="offset-md-2 d-none d-md-block"></div>
                </div>

            {% endif %}
            {% if post.get_field('field_5cb8ecc79f5cc') == true %}
                <div class="col-12">
                    <h2 class="article-h1 m-t-b">
                        Galerie
                    </h2>
                </div>
                <div class="offset-2"></div>
                <div class="col-md-2">
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                </div>
                <!-- IMAGES 400X300 -->
                <div id="carouselExampleIndicators" class="carousel  d-none d-sm-block col-md-4" data-ride="carousel">
                    <div class="carousel-inner">
                        {# img 1#}
                        <div class="carousel-item active">
                            <img class="affiche d-block w-100" src="{{ post.get_field('field_5d55f554f0714') }}" alt="First slide">
                        </div>
                        {# img 2#}
                        <div class="carousel-item">
                            <img class="affiche d-block w-100" src="{{ post.get_field('field_5d57e3ef7f6ed') }}" alt="Second slide">
                        </div>
                        {# img 3#}
                        <div class="carousel-item">
                            <img class=" affiche d-block w-100" src="{{ post.get_field('field_5d57e3f67f6ef') }}" alt="Third slide">
                        </div>
                        {# img 4#}
                        <div class="carousel-item">
                            <img class="affiche d-block w-100" src="{{ post.get_field('field_5d57e4067f6f0') }}" alt="Fourth slide">
                        </div>
                        {# Si img5 existe #}
                        {% if post.get_field('field_5d57e40a7f6f1') %}
                            {# img 5#}
                            <div class="carousel-item">
                                <img class="affiche d-block w-100" src="{{ post.get_field('field_5d57e40a7f6f1') }}" alt="Fifth slide">
                            </div>
                        {% endif %}
                        {# Si img6 existe #}
                        {% if post.get_field('field_5d57e4107f6f3') %}
                            {# img 6#}
                            <div class="carousel-item">
                                <img class="affiche d-block w-100" src="{{ post.get_field('field_5d57e4107f6f3') }}" alt="sixth slide">
                            </div>
                        {% endif %}
                        {# Si img6 existe #}
                        {% if post.get_field('field_5d57e4137f6f4') %}
                            {# img 7#}
                            <div class="carousel-item">
                                <img class="affiche d-block w-100" src="{{ post.get_field('field_5d57e4137f6f4') }}" alt="seventh slide">
                            </div>
                        {% endif %}
                        {# Si img7 existe #}
                        {% if post.get_field('field_5d57e4157f6f5') %}
                            {# img 8#}
                            <div class="carousel-item">
                                <img class="affiche d-block w-100" src="{{ post.get_field('field_5d57e4157f6f5') }}" alt="eighth slide">
                            </div>
                        {% endif %}
                        {# Si img8 existe #}
                        {% if post.get_field('field_5d57e4187f6f6') %}
                            {# img 9#}
                            <div class="carousel-item">
                                <img class="affiche d-block w-100" src="{{ post.get_field('field_5d57e4187f6f6') }}" alt="ninth slide">
                            </div>
                        {% endif %}
                        {# Si img9 existe #}
                        {% if post.get_field('field_5d57e41a7f6f7') %}
                            {# img 10#}
                            <div class="carousel-item">
                                <img class="affiche d-block w-100" src="{{ post.get_field('field_5d57e41a7f6f7') }}" alt="tenth slide">
                            </div>
                        {% endif %}

                    </div>

                </div>
                <!-- BOUTONS -->
                <div class="col-md-2">
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                </div>
                <div class="offset-2"></div>

                <div class="img-alt-home d-block d-md-none">
                    <img src="{{ post.thumbnail.src }}" alt=" " id="mati-bras" class="thumb-medal flex-thumb thumb-medal2">
                    <div class="d-block d-md-none caption caption2">
                        {{ post.get_field('field_5cb8c1272895d') }}
                        <!-- BOUTONS SCROLL-->
                        <a href="#article-anch" class="anch">
                            <div class="button button-h">
                                <p>
                                    <i class="fas fa-chevron-down"></i>
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
            {% endif %}
            <div class="offset-1"></div>
            {% if post.get_field('dispo') %}
                <a id="article-anch3"></a>
                <div class="col-md-10 bref">
                    <a id="article-anch3" class="anch"></a>
                    <h2 class="article-text-h2" id="title-spe">
                        {{ post.title }}
                    </h2>
                    <div class="bref_block">

                        <p class="bref-item style">
                            {{ post.get_field('field_5cb19e8a1f92d') }}
                        </p>
                        <p class="bref-item">
                            à partir de {{ post.get_field('field_5cb19f4acd2c1') }} ans
                        </p>
                        <p class="bref-item">
                            jusqu'à {{ post.get_field('field_5cb19fb4cd2c2') }} ans
                        </p>
                        <div class="bref-item">

                            <p class="school">
                                Scolaires: du {{ post.get_field('field_5cb1e19399290') }} au {{ post.get_field('field_5cb1e23b477ab') }}.
                            </p>
                        </div>


                        <p class="bref-item">
                            durée: {{ post.get_field('field_5cb19fe0cd2c3') }} mn
                        </p>
                        <p class="bref-item">
                            jauge: {{ post.get_field('field_5cb1a05dcd2c4') }}
                        </p>

                        <p class="bref-item">
                            tarif *: {{ post.get_field('field_5cb1a073cd2c5') }} €
                        </p>
                        <p class="mentions">
                            <i>* hors frais de déplacement et conditions particulière</i>
                            <a href="">nous consulter</a>
                        </p>
                        <div>


                            {% for event in events %}
                                {% if post.get_field('field_5cbc31c7f2c13') == event.get_field('field_5cbc31c7f2c13') %}
                                    {% if "now"|date<event.get_field('field_5cb4d81344d45')  %}
                                    <h4 class="next-date next-date2">PROCHAINES REPRÉSENTATIONS</h4>
                                     <section class="container">

                                        <a class="row event-home-bloc" href="{{ event.link }}">
                                            <div class="thumb thumb2 col-md-3">
                                                <img src="{{ post.thumbnail.src }}" alt="thumb">
                                            </div>
                                            <p class="col-md-3">{{ event.get_field('field_5cb4d81344d45') }}</p>
                                            <p class="col-md-3">{{ event.get_field('field_5cb4e5ba17780') }}</p>
                                            <p class="col-md-3">{{ event.get_field('field_5cb4e62317783') }} {{ event.get_field('field_5cb4e63d17784') }}</p>
                                        </a>
                                    </section>

                                    {% endif %}
                                {% endif %}
                            {% endfor %}


                        </div>
                    </div>


                </div>
                <div class="offset-1"></div>


            {% else %}

            <a id="article-anch3" class="anch col-md-12"></a>

            <h2 class="article-h1">A L'AFFICHE</h2>
                    <div class="article-loop article-loop2 container-fluid">
                        {% for show in shows %}

                            {% if show.get_field('dispo') %}

                                <div class="show_1 row">
                                    <a class="row" href="{{ show.link }}">
                                        <h1 class="h1-medal col-12">
                                            {{ show.title }}
                                        </h1>

                                        <div class="thumb-medal thumb-medal2 col-md-12">
                                            <img src="{{show.thumbnail.src}}" alt="affiche" class="affiche">
                                        </div>
                                        <p class=" medal-text col-md-12">
                                            {{ show.preview.read_more('lire la suite') }}
                                        </p>
                                    </a>
                                </div>
                            {% endif %}

                        {% endfor %}

                    </div>

            {% endif %}


            <div class="offset-1"></div>

        </article>
    </div>


{% endblock %}


