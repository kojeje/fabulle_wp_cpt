<div class="article-loop">
    {% for show in shows %}

        {% if show.get_field('dispo') == 'Spectacle disponible' %}


            <div class="row show-medal show_1 show4">

                <h2 class="h1-medal col-12">
                    {{ show.title }}
                </h2>
                <div class="offset-md-1"></div>
                <div class="thumb-medal thumb-medal2 col-12 col-md-4">
                    <img src="{{show.thumbnail.src}}" alt="affiche" class="affiche">
                </div>
                <div class="offset-md-1"></div>

                <p class=" medal-text col-12 col-md-6">
                    {{ show.preview.length(10).read_more('lire la suite')
                    }}
                </p>


            </div>


        {% endif %}
    {% endfor %}
</div>