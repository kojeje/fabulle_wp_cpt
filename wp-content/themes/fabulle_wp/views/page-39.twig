{% extends 'base.twig' %}

{% block content %}
    <a id="article-anch"></a>
    <section class="content-wrapper article_content" xmlns="http://www.w3.org/1999/html">
        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}} container-fluid">
            <div class="bloc-title bloc-title2 row ">
                <div class="offset-md-1 d-none d-lg-block"></div>
                <div class="thumb col-12 col-lg-4">
                    <img src="{{ post.thumbnail.src }}" alt="image de {{ post.title }}">
                </div>
                <div class="title-bloc col-12 col-lg-6">
                    <h1 class="article-h1 under-title loop-title loop-title2">{{ post.title }}</h1>
                    <p>{{ post.content }}</p>
                </div>
            </div>
            <div class="row">
                <div class="offset-md-1 d-none d-lg-block"></div>
                <div class="title-bloc col-12 col-lg-6">
                    <h1 class="article-h1 under-title loop-title loop-title2">{{ post.subtitle }}</h1>
                    <p>{{ post.get_field('textalt') }}</p>
                    <a href="#article-anch2" class="flex-btn">
                        <div class="button button2 button3">
                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                </div>
                <div class="thumb col-12 col-lg-4">
                    <img src="{{ post.get_field('imgalt') }}" alt="image de {{ post.subtitle }}">
                </div>
            </div>

            <div class="row">
                <a id="article-anch2" class="anch"></a>
                <h1 class="article-h1 under-title col-12">Les membres</h1>

                {% for membre in membres if membre.get_field('statut') == 'actuel' %}
                    <a href="{{ membre.link }}" class=" col-12 col-md-5">
                        <div class="membre">
                            <h3 class="article-text-h2 col-12">{{ membre.get_field('prenom') }} {{ membre.get_field('nom') }} </h3>
                            <img src="{{ membre.thumbnail.src }}" class="col-4 float-thumb" alt="Image pour {{ membre.title}}">
                            <div class="col-12">{{ membre.get_field('bio')|truncate(50) }}</div>
                            {#<i class="metiers t-a-center">{{ membre.get_field('metiers')|join (',<br>') }}</i>#}
                        </div>
                    </a>
                    <div class="offset-md-1 d-none d-md-block"></div>

                {% endfor %}
                <div class="offset-md-1 d-none d-md-block"></div>
                <a href="#article-anch3" class="col-xs-12 col-md-4">
                    <div class="button button2 button3">
                        <p>
                            <i class="fas fa-chevron-down"></i>
                        </p>
                    </div>
                </a>
                <a id="article-anch3"></a>
                <h1 class="article-h1 under-title col-12">Ils sont pass√©s par chez nous</h1>

                {% for membre in membres if membre.get_field('statut') == 'ancien' %}

                        <a href="{{ membre.link }}" class=" col-12 col-md-5">
                            <div class="membre">
                                <h3 class="article-text-h2 col-12">{{ membre.get_field('prenom') }} {{ membre.get_field('nom') }} </h3>
                                <img src="{{ membre.thumbnail.src }}" class="col-4 float-thumb" alt="Image pour {{ membre.title}}">
                                <div class="col-12">{{ membre.get_field('bio')|truncate(50) }}</div>
                                {#<i class="metiers t-a-center">{{ membre.get_field('metiers')|join (',<br>') }}</i>#}
                            </div>
                        </a>

                {% endfor %}
                <div class="offset-md-1 d-none d-md-block"></div>
                <a href="#article-anch4" class="col-xs-12 col-md-4">
                    <div class="button button2 button3">
                        <p>
                            <i class="fas fa-chevron-down"></i>
                        </p>
                    </div>
                </a>
            </div>
            <a id="article-anch4"></a>
            <div class="container-fluid">
                {% include '/views/partials/loops/references-loop.twig' %}
            </div>
            {# Boucle spectacles#}
            <a id="article-anch9"></a>
            <a class="col-md-12 d-lg-block d-none" id="article-anch10"></a>
            <div class="article-loop article-loop2">
                <div class="title-bloc">
                    <h2 class="article-h1 under-title h1-event-list a-l-affiche">
                        <i class="far fa-theater-masks"></i> A L'AFFICHE
                    </h2>
                    <a href="#article-anch4" class="d-none d-md-block">
                        <div class="button button2 button3">
                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                </div>
                {% include '/views/partials/loops/show-loop.twig' %}
            </div>
            <a id="article-anch4" class="d-none d-md-block"></a>
            {% include '/views/partials/loops/event-loop2.twig' %}
        </article>
    </section>

{% endblock %}
