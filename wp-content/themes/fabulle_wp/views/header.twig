<header class="header container-fluid">
    <div class="header_bloc row">

        <div class="logo col-4">
            <a href="https://www.kojeje.fr/fabulle/">
                <img class="logo_fabulle" src="{{ theme.link }}/assets/img/fabulle_spectacles_enfants.png" alt="logo">
            </a>
        </div>
        <nav class="nav d-none d-lg-block col-lg-8">
            <ul class="links">
                {% for item in menu.items %}
                    <a href="{{ item.link }}">
                        <li class="link">{{ item.title }}</li>
                    </a>
                {% endfor %}
            </ul>
        </nav>
        <div class="d-lg-none d-block offset-4"></div>
        <nav class="dropdown show nav d-lg-none d-block col-4">

            <a href="#" class="btn btn-secondary dropdown-toggle links" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <p><i class="fas fa-bars"></i></p>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            {% for item in menu.items %}
                <a class="add2 add-link dropdown-item link" href="{{ item.link }}">{{ item.title }}</a>
            {% endfor %}
            </div>

        </nav>


    </div>
</header>
