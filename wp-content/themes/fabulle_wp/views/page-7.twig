{% block content %}
<!-- CORPS DE LA PAGE -->
    <a id="article-anch" class="anch d-none d-md-block"></a>
<div class="article-loop article-loop2" id="article-loop">

    <article class="post-type-{{post.post_type}} row" id="post-{{post.ID}}">

        <section class="article-content home row">
            <h2 class="col-12 col-md-6 article-h1 flex-h1 h1-event-list" >
                <i class="fal fa-home-lg"> </i> Accueil
            </h2>
            <div class="offset-md-6"></div>
           {% for actu in actus %}

                {% if actu and now|date('m') != actu.date|date('m') %}

                    <div class="offset-md-1 d-none d-md-block"></div>
                    <div class="col-12 col-md-5 flex-title-bloc">
                        <a href="{{ actu.link }}">
                            <h2 class=" article-h4 flex-h1 h1-event-list">
                                 le petit mot ... <span class="word-date">{{ actu.date|date('F Y') }}</span>
                            </h2>

                            <div class="word-content">
                                <img src="{{ actu.thumbnail.src }}" class="affiche oneevent-img"  alt="affiche2">
                                {{ actu.content|truncate(160) }}
                            </div>
                        </a>
                    </div>

                {% else %}

                    <div class="offset-md-1 d-none d-md-block"></div>
                    <div class="col-12 col-md-5 flex-title-bloc">
                        <h2 class="article-h1 flex-h1 h1-event-list" >
                            <i class="fal fa-home-lg"> </i> {{post.get_field('field_5cb8c3fb40b3a')}}
                        </h2>
                        <div class="img-alt-home d-md-block d-none">

                            <div class="d-block d-md-none caption caption2">
                                {{ post.get_field('field_5cb8c1272895d') }}
                            </div>
                        </div>

                        <p>
                            <img src="{{ theme.link }}/assets/img/mati-bras.jpg" alt="mati-bras" id="mati-bras" class="thumb-medal float-thumb flex-thumb thumb-medal2">
                            {{post.content}}
                        </p>
                        <a href="#article-anch2" class="flex-btn">
                            <div class="button button2 button3">
                                <p><i class="fas fa-chevron-down"></i></p>
                            </div>
                        </a>
                    </div>
                {% endif %}
            {% endfor %}
            <div class="offset-md-1 d-none d-md-block"></div>
            {% for oneevent in oneevents %}
                <div id="title-bloc" class="title-bloc2 flex-title-bloc col-12 col-md-4">
                    {% for oneshow in oneshows
                        if oneshow.get_field('id_show') == oneevent.get_field('id_show')%}
                        {% if oneevent.get_field('public') == true
                            and oneshow.get_field('dispo') == 1
                            and "now"|date < oneevent.get_field('date_show')
                        %}
                            <h2 class="article-h4 h1-event-list col-12">
                                <i class="fal fa-calendar"></i>
                                prochaine repr√©sentation
                            </h2>
                            <div class="article-loop row container-fluid event-list">
                                <section class="event2 container-fluid">
                                    <a class="row event-home-bloc" href="{{ oneevent.link }}">
                                        <div class="offset-md-2 d-none d-md-block"></div>
                                        <div class="thumb3 col-12 col-md-8 d-none d-md-block">
                                            <img src="{{ oneshow.thumbnail.src }}" alt="thumb">
                                        </div>
                                        <div class="offset-md-2 d-none d-md-block"></div>
                                        <p class="date-list col-12">{{ oneevent.get_field('date_show') }}</p>
                                        {% for place in places if place.get_field('salle') == oneevent.get_field('salle')%}

                                                <p class="col-12">{{ place.get_field('cp') }} {{ place.get_field('commune') }}</p>


                                        {% endfor %}
                                    </a>
                                </section>
                            </div>
                        {% elseif post.get_field('video-booleen') == true %}
                            <h2 class="article-h1 h1-event-list" id="video-title">
                                <i class="fal fa-video"></i> Videos
                            </h2>
                            <section class="article-content row">
                                <div class="offset-md-1 d-none d-md-block"></div>
                                <div class="article-loop video-content col-12 col-md-12" id="video">
                                    {{ post.get_field('field_5cb8c5092e363') }}
                                </div>
                                <div class="offset-md-1 d-none d-md-block"></div>
                                <div class="title-bloc video-title-bloc col-12">

                                    <a href="#article-anch3" class="col-md-12 d-none d-md-block">
                                        <div class="button button2 button3">
                                            <p><i class="fas fa-chevron-down"></i></p>
                                        </div>
                                    </a>
                                </div>
                            </section>

                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}

        </section>

    </article>
