{% block content %}
<!-- CORPS DE LA PAGE -->
    {# accueil #}
<a id="article-anch" class="anch d-none d-md-block"></a>

<div class="article-loop article-loop2 w-100 m-a" id="article-loop">
    <div class="cpost-type-{{post.post_type}}" id="post-{{post.ID}}">

         {#Slogan smartphones#}
        {% include '/views/partials/slogan-phone.twig' %}
        {# ------------ SECTION 1 ---------------------------------------- #}
        <section class="article-content home row back-home parallax2">
            {# Si il y a des dates à afficher#}
            {% if events %}
                <div class="offset-md-1 d-none d-md-block"></div>
                {#ACCUEIL#}
                <div class="col-12 col-md-5 row event-list2">
                    {#TITRE#}
                    <div class="offset-md-1 d-none d-md-block"></div>
                    <h2 class="titre-page link link#66ccff2 col-12 col-md-8 flex-h1 h1-event-list">
                        <i class=" fas fa-home-lg"> </i> ACCUEIL
                    </h2>
                    {#CONTENU#}
                    <div class="event-home-date-block d-md-none offset-1"></div>
                    <div class="home-post cie-text col-10">
                        <h3 class="article-sub-h1 link linkZ titre-page2 ">{{ post.get_field('sub1') }}</h3>

                        <img src="{{ post.thumbnail.src }}" class="float-thumb m-a" alt="Image pour {{ post.title}}">
                        {{ post.content }}
                    </div>

                    {# => Balise suivante#}
                    <a href="#article-anch2" class="col-md-12 d-none d-md-block">
                        <div class="button button2 button3">
                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                </div>
                <div class="offset-md-1 d-none d-md-block"></div>

                {#Prochaine date#}
                {% include '/views/partials/loops/one-event-loop.twig' %}

            {#Sinon#}
            {% else %}
                <div class="offset-md-1 d-none d-md-block"></div>
                {#ACCUEIL#}
                <div class="col-12 col-md-4 row event-list2 flex-title-bloc">
                    {#TITRE#}
                    <h2 class="titre-page link link#66ccff2 col-12 col-md-8 flex-h1 h1-event-list" >
                        <i class=" fas fa-home-lg"> </i> ACCUEIL
                    </h2>
                    {# CONTENU#}
                    <div class="event-home-date-block d-md-none offset-1"></div>
                    <div class="home-post cie-text col-10">
                        <h3 class="article-sub-h1 link linkZ titre-page2 ">{{ post.get_field('sub1') }}</h3>

                        <img src="{{ post.thumbnail.src }}" class="float-thumb m-a" alt="Image pour {{ post.title}}">
                        {{ post.content }}
                    </div>
                    {# => Balise suivante#}
                    <a href="#article-anch2" class="col-md-12 d-none d-md-block">
                        <div class="button button2 button3">
                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                </div>
                <div class="d-block d-md-none">
                    {# séparateur #}
                    {% include '/views/partials/separation.twig' %}

                </div>
                {# VIDEO#}
                <div class="offset-md-1 d-none d-md-block"></div>
                {% include '/views/partials/video2.twig' %}
            {% endif %}


        </section>

        {# séparateur #}
        {% include '/views/partials/separation.twig' %}
        {# ------------ SECTION 2 ---------------------------------------- #}
        <a class="col-12 d-none d-md-block" id="article-anch2"></a>
        <section class="article-content home row row-eq-height ptit_mot-inc parallax2">
            {# Si il y a des dates à afficher#}
            {% if events %}
                <div class="offset-md-1 d-none d-md-block"></div>
                {% include '/views/partials/loops/1actu.twig' %}

                {% include '/views/partials/video.twig' %}
            {% else %}
                {% include '/views/partials/loops/1actu-row.twig' %}
            {% endif %}

        </section>

        {# séparateur #}
        {% include '/views/partials/separation.twig' %}

        {# ------------ SECTION 3 ---------------------------------------- #}
        {% if shows %}
            <a class="col-md-12 d-lg-block d-none" id="article-anch3"></a>
            <section class="article-loop article-loop2 back-show parallax2">
                <div class="title-bloc">
                    <h2 class="titre-page event-list2 article-h1 under-title link link#ffcc332 link2 h1-event-list a-l-affiche">
                            <i class="fas fa-star"></i> A L'AFFICHE
                    </h2>
                </div>
                {% include '/views/partials/loops/show-loop.twig' %}

            </section>
        {% endif %}
        {# séparateur #}
        {% include '/views/partials/separation.twig' %}

        {# ------------ SECTION 4 ---------------------------------------- #}
        {% if events %}
            <a id="article-anch4" class="d-none d-md-block"></a>
            <section class="col-12 parallax2" id="home-event" >

            {% include '/views/partials/loops/event-loop.twig' %}
            </section>


            {# séparateur #}
            {% include '/views/partials/separation.twig' %}
        {% endif %}
        {# ------------ SECTION 5 ---------------------------------------- #}
        <section class="row">
            {# modifier balise interne en fonction de la presence d'évènement #}
            {% if events %}
                <a class="col-md-12 d-lg-block d-none" id="article-anch5"></a>
            {% else %}
                <a class="col-md-12 d-lg-block d-none" id="article-anch4"></a>
            {% endif %}
            {# Tant qu'ily a des pages #}
            {% for cie in cies %}
                {# dont l'id est 39 id#}
                {% if cie.id == 39 %}
                    {# lien vers la page 'la cie'#}
                    <a href="{{ cie.link }}" class="bloc-title bloc-title2 row ">
                        <div class="offset-1"></div>
                        {# contenu choisi de la page à afficher dans le bloc #}

                        {# Bloc text img 1 #}
                        <div class="col-12 col-md-6 row">
                            {# Titre #}
                            <h1 class="titre-page article-h1 under-title loop-title loop-title2 link link#ff66332 link2">
                                <i class="fas fa-circle"></i>
                                {{ cie.title|upper }}
                            </h1>
                            <div class="offset-md-1 d-none d-lg-block"></div>
                            {# texte et image#}
                            <div class="thumb home-post cie-text col-11 ">
                                <img class="float-thumb img50" src="{{ cie.thumbnail.src }}" alt="image de {{ cie.title }}">
                                {{ cie.content }}

                            </div>
                        </div>
                        {# Bloc text img 2 #}
                        {#<div class="offset-md-1 d-none d-md-block"></div>#}
                        <div class="col-12 col-md-5">
                            {# Titre #}
                            <h1 class="titre-page2 article-h1 under-title loop-title loop-title2 link link#ff66332 link2">
                                <i class="fas fa-circle"></i>
                                {{ cie.get_field('subtitle') }}</h1>
                            <div class="offset-md-1 d-none d-lg-block"></div>
                            {# texte et image#}
                            <p class="home-post thumb col-11 cie-text">
                                <img class="float-thumb2 " src="{{ cie.get_field('imgalt') }}" alt="image de {{ cie.title }}">
                                {{ cie.textalt }}

                            </p>
                        </div>
                        <div class="offset-md-2 d-none d-md-block"></div>

                    </a>
                    {# modifier lien vers balise interne en fonction de la presence d'évènement #}
                    {% if events %}
                        <a href="#article-anch6" class="col-md-12 d-none d-md-block">
                            <div class="button button2 button3">
                                <p><i class="fas fa-chevron-down"></i></p>
                            </div>
                        </a>
                    {% else %}
                        <a href="#article-anch5" class="col-md-12 d-none d-md-block">
                            <div class="button button2 button3">
                                <p><i class="fas fa-chevron-down"></i></p>
                            </div>
                        </a>
                    {% endif %}
                {% endif %}
            {% endfor %}
            {# séparateur #}
            {% include '/views/partials/separation.twig' %}
        </section>

        {# ------------ SECTION 5 ---------------------------------------- #}
        <section class="row">

            {% if events %}
                <a class="col-md-12 d-lg-block d-none" id="article-anch6"></a>
            {% else %}
                <a class="col-md-12 d-lg-block d-none" id="article-anch5"></a>
            {% endif %}
            <h1 class="article-h1 under-title col-12 link link#ffcc332 link2">
                <i class="fas fa-star"></i>
                {{ 'En création'|upper }}
            </h1>
            {% include '/views/partials/loops/soon-show-loop.twig' %}

        </section>
    </div>
</div>
{% endblock %}



